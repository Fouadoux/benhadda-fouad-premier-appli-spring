<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <!-- Définition des appenders -->
    <Appenders>

        <!-- Appender console : Seuls les logs de niveau WARN et supérieur seront affichés -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
            <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
        </Console>

        <!-- Appender fichier : Les logs INFO et supérieurs seront enregistrés dans un fichier -->
        <File name="LogFile" fileName="logs/app.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
        </File>

    </Appenders>

    <!-- Configuration du logger -->
    <Loggers>
        <Root level="INFO">
            <!-- Associer l'appender console et fichier au logger root -->
            <AppenderRef ref="Console" />
            <AppenderRef ref="LogFile" />
        </Root>
    </Loggers>
</Configuration>
